<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_board_cconma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="꽃마보드" />
                <Button
                    android:id="@+id/btn_board_develop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개발팀" />
                <Button
                    android:id="@+id/btn_board_cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CM팀" />
                <Button
                    android:id="@+id/btn_board_cs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS" />
                <Button
                    android:id="@+id/btn_board_marketing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마케팅" />
                <Button
                    android:id="@+id/btn_board_happyrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="행밥팀"  />
                <Button
                    android:id="@+id/btn_board_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="디자인"  />
                <Button
                    android:id="@+id/btn_board_distribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물류팀"  />
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/layout_board_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/spinner_board_condition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/edit_board_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="입력하세요"/>
                    <Button
                        android:id="@+id/btn_board_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="검색하기"/>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/framelay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_board_search">
                <ToggleButton
                    android:id="@+id/btn_board_search_view"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textOff=""
                    android:textOn=""/>
            </FrameLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/list_board"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom">
        <ImageButton
            android:id="@+id/btn_board_write"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_write"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>
    </FrameLayout>
</FrameLayout>
