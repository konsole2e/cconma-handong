<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_board_cconma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="꽃마보드" />
            <Button
                android:id="@+id/btn_board_develop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개발팀" />
            <Button
                android:id="@+id/btn_board_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CM팀" />
            <Button
                android:id="@+id/btn_board_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS" />
            <Button
                android:id="@+id/btn_board_marketing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마케팅" />
            <Button
                android:id="@+id/btn_board_happyrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행밥팀"  />
            <Button
                android:id="@+id/btn_board_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디자인"  />
            <Button
                android:id="@+id/btn_board_distribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물류팀"  />
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/view_board_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_board_condition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="입력하세요"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="검색하기"/>
            </LinearLayout>
        </FrameLayout>
        <Button
            android:id="@+id/btn_board_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_board_search"
            android:layout_centerHorizontal="true"
            android:text="검색"/>
    </RelativeLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </ListView>
    


</LinearLayout>
