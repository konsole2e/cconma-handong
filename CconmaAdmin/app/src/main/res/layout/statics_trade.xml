<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPanel"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/trade_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/trade_hourly_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trade_hourly_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="거래액(시간별)"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trade_hourly_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:text="크게보기 >"
                android:padding="10dp"
                android:textSize="10dp" />

        </RelativeLayout>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/trade_hourly_combineChart"
            android:layout_width="wrap_content"
            android:layout_height="300dp" />

        <RelativeLayout
            android:id="@+id/trade_daily_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/trade_daily_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="거래액(일간)"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trade_daily_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:text="크게보기 >"
                android:padding="10dp"
                android:textSize="10dp" />

        </RelativeLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/trade_daily_barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <RelativeLayout
            android:id="@+id/trade_weekly_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/trade_weekly_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="거래액(주간)"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trade_weekly_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:text="크게보기 >"
                android:padding="10dp"
                android:textSize="10dp" />

        </RelativeLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/trade_weekly_lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <RelativeLayout
            android:id="@+id/trade_monthly_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/trade_monthly_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="거래액(월간)"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trade_monthly_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:text="크게보기 >"
                android:padding="10dp"
                android:textSize="10dp" />

        </RelativeLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/trade_monthly_lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>
</ScrollView>
