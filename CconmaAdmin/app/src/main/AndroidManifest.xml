<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="handong.cconma.cconmaadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- uses-permissions for GCM -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />
    <!-- -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/company_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/company_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.MyWebView"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>

        <activity
            android:name=".Activity.BoardWriteActivity"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>

        <activity

            android:name=".Activity.BoardModifyActivity"
            android:parentActivityName=".Activity.BoardViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.BoardViewActivity" />
        </activity>

        <activity
            android:name=".Activity.BoardViewActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>

        <activity android:name=".Inquiry.InquryMember" />
        <activity android:name=".Inquiry.InquryOrder" />
        <activity android:name=".Push.PushView" />
        <activity android:name=".Statics.StaticsMain"/>
        <activity
            android:name=".Statics.StaticsOrderH"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".Statics.StaticsLike"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".Statics.StaticsOrderRecent"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".Statics.StaticsTrade"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".Statics.StaticsMember"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".Statics.StaticsMemberRecent"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <service android:name="etc.IconService">
            <intent-filter>
                <action android:name="iconservice" />
            </intent-filter>
        </service>

    </application>


</manifest>
